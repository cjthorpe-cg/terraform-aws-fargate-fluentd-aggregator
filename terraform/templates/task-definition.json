[
  {
    "cpu": "${fargate_cpu}",
    "essential": true,
    "image": "${app_image}",
    "memory": "${fargate_memory}",
    "name": "${app_name}",
    "networkMode": "awsvpc",
    "portMappings": [
      {
        "containerPort": "${fluentd_port}",
        "hostPort": "${fluentd_port}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group_name}",
        "awslogs-region": "${log_group_region}",
        "awslogs-stream-prefix": "fargate-fluentd"
      }
    },
    "HealthCheck": {
      "command": {
        "CMD-SHELL": "curl http://localhost:8888/healthcheck?json=%7B%22log%22%3A+%22health+check%22%7D || exit 1"
      },
      "startPeriod": "30"
    }
  }
]
